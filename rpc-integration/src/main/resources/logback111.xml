    <property name="CONSOLE_LOG_PATTERN"
              value="%blue(%date{yyyy-MM-dd HH:mm:ss.SSS}) | %highlight(%-5level) | %boldYellow(%thread) | %boldGreen(%logger) | %magenta(%msg%n)"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
